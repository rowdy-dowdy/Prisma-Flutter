generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  user_id  Int?
  content   String?
  id        Int     @id @default(autoincrement())
  published Boolean @default(false)
  title     String
  user    User?   @relation(fields: [user_id], references: [id])
}

model Profile {
  id    Int     @id @default(autoincrement())
  user_id  Int
  image String
  following Flollow[] @relation("following")
  followers Flollow[] @relation("followers")
  user    User   @relation("user", fields: [user_id], references: [id])
}

model Flollow {
  id    Int     @id @default(autoincrement())
  user_id Int
  user_follow Int
  following Profile @relation("following", fields: [user_id], references: [id])
  followers Profile @relation("followers", fields: [user_follow], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique(map: "User.email")
  name  String?
  password String
  posts Post[]
  profile Profile?  @relation("user")
}
