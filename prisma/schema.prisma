generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model posts {
  id        Int     @id @default(autoincrement())
  content   String?
  images     String
  user_id  Int?
  user    users?   @relation("user", fields: [user_id], references: [id])
  reactions post_reactions[] @relation("reactions")
  comments post_comments[] @relation("comments")
}

model post_reactions {
  id Int @id @default(autoincrement())
  post_id  Int?
  type String?
  post posts? @relation("reactions", fields: [post_id], references: [id])
}

model post_comments {
  id Int @id @default(autoincrement())
  post_id  Int?
  content String?
  post    posts?   @relation("comments", fields: [post_id], references: [id])
}

model users {
  id    Int     @id @default(autoincrement())
  email String  @unique()
  name  String?
  password String
  posts posts[] @relation("user")
  profile profiles?
}

model profiles {
  id    Int     @id @default(autoincrement())
  image String 
  following flollows[] @relation("following")
  followers flollows[] @relation("followers")
  user_id  Int?
  user    users?   @relation(fields: [user_id], references: [id])
}

model flollows {
  id    Int     @id @default(autoincrement())
  user_id Int?
  user_follow Int?
  following profiles? @relation("following", fields: [user_id], references: [id])
  followers profiles? @relation("followers", fields: [user_follow], references: [id])
}
